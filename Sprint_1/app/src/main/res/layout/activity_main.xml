<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/img_escudo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/quindio"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/tittle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:text="@string/quindio_colombia"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_escudo"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:id="@+id/info"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="@string/info"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLefttOf="@+id/temp"
        app:layout_constraintTop_toBottomOf="@+id/tittle"
        app:layout_constraintBottom_toBottomOf="@+id/img_map"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/temp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/temp"
        android:textAlignment="center"
        app:layout_constraintLeft_toRightOf="@+id/info"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tittle"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

    <ImageView
        android:id="@+id/img_map"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/mapa"
        app:layout_constraintTop_toBottomOf="@+id/temp"
        app:layout_constraintLeft_toRightOf="@+id/info"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/tittle_sites"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:text="@string/sitios"
        app:layout_constraintTop_toBottomOf="@+id/img_map"
        android:layout_marginTop="20dp"
        />

    <ImageView
        android:id="@+id/img_panaca"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/panaca"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tittle_sites"
        android:layout_marginLeft="30dp"
        />

    <ImageView
        android:id="@+id/img_parque_cafe"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/parquecafe"
        app:layout_constraintStart_toEndOf="@id/img_panaca"
        app:layout_constraintTop_toBottomOf="@+id/tittle_sites"
        android:layout_marginLeft="20dp"
        />

    <ImageView
        android:id="@+id/img_recuca"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/recuca"
        app:layout_constraintStart_toEndOf="@id/img_parque_cafe"
        app:layout_constraintTop_toBottomOf="@+id/tittle_sites"
        android:layout_marginLeft="20dp"
        />

    <ImageView
        android:id="@+id/img_salento"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/salento"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_parque_cafe"
        android:layout_marginLeft="80dp"
        />

    <ImageView
        android:id="@+id/img_cocora"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/cocora1"
        app:layout_constraintStart_toEndOf="@+id/img_salento"
        app:layout_constraintTop_toBottomOf="@+id/img_parque_cafe"
        android:layout_marginLeft="40dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>